<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.risingstar.talentaachiva.feature.dashboard.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.risingstar.talentaachiva.feature.dashboard.ui.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_todolist"
        android:name="com.risingstar.talentaachiva.feature.dashboard.ui.todolist.TodolistFragment"
        android:label="To Do List"
        tools:layout="@layout/fragment_todolist" />
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.risingstar.talentaachiva.feature.dashboard.ui.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.risingstar.talentaachiva.feature.dashboard.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>